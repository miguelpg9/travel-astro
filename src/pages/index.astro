<style>
	.title{
		background-image: url('../assets/img/travel.jpg');
		background-size: cover;
		background-position: bottom;
		height: 700px;
		margin: -8px;
		border: 1px solid;
	}

	.text{
		color: #fff;	
		margin-left: 100px;
		width: 800px;
		margin-top: 200px;
	}

	.text h1{
		font-size: 120px;
		margin: 0;
	}

	.text p{
		width: 450px;
		margin: 0;
	}
</style>
